<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Título de la Categoría (Ej: Conversor de Longitud) -->
    <TextView
        android:id="@+id/txtTituloCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="#333333"/>

    <!-- Etiqueta para el Campo de Entrada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor a Convertir:"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <!-- Campo de Entrada Decimal -->
        <EditText
            android:id="@+id/editValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 10.5"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Selección de Unidad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unidad de Origen:"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerUnidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:minHeight="48dp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Botón de acción -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONVERTIR"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="#FF7987"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <!-- Resultados -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultados de Conversión:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/txtResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los resultados aparecerán aquí..."
            android:textSize="16sp"
            android:textColor="#333333"
            android:lineSpacingMultiplier="1.5"
            android:padding="8dp"/>
    </ScrollView>

</LinearLayout>
